    <div class="box adminbox" id="impex">
      <span class="cb_label"><%= l(:codebook_admin_label_impex) %></span>
      <hr />
      <%= button_to "Export", :action => "export" %>
      <%= l(:codebook_admin_label_export)%>
      <hr />
    </div>  --> 

  </div>



<% content_for :sidebar do %>
  <%= render :partial => 'codebook/menu' %>
<% end %>
